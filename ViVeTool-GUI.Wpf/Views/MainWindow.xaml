<Window x:Class="Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:ViVeTool_GUI.Wpf.ViewModels"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=vm:MainViewModel, IsDesignTimeCreatable=False}"
        Title="ViVeTool GUI (WPF)" 
        Height="600" Width="900"
        MinHeight="400" MinWidth="600"
        WindowStartupLocation="CenterScreen"
        Style="{DynamicResource MainWindowStyle}"
        Background="{DynamicResource PrimaryBackgroundBrush}"
        Foreground="{DynamicResource PrimaryForegroundBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <!-- Header/Toolbar -->
            <RowDefinition Height="Auto" />
            <!-- Warning Banners (Admin/Feature Query) -->
            <RowDefinition Height="Auto" />
            <!-- Main Content -->
            <RowDefinition Height="*" />
            <!-- Status Bar -->
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header/Toolbar Area -->
        <Border Grid.Row="0" 
                Background="{DynamicResource HeaderBackgroundBrush}" 
                Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Left: Build Selection -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Build:" 
                               VerticalAlignment="Center" 
                               Margin="0,0,8,0"
                               Foreground="{DynamicResource PrimaryForegroundBrush}" />
                    <ComboBox Width="120" 
                              ItemsSource="{Binding AvailableBuilds}"
                              SelectedItem="{Binding SelectedBuild}"
                              IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}" />
                    <Button Content="Refresh" 
                            Margin="8,0,0,0"
                            Command="{Binding RefreshBuildsCommand}"
                            ToolTip="Refresh available builds from feed" />
                    <Button Content="Load Build" 
                            Margin="8,0,0,0"
                            Command="{Binding LoadBuildCommand}"
                            ToolTip="Load features from selected build" />
                    <Button Content="Load File..." 
                            Margin="8,0,0,0"
                            Command="{Binding LoadFromFileCommand}"
                            ToolTip="Load features from a local file (txt/csv/json)" />
                </StackPanel>

                <!-- Center: Search -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Search:" 
                               VerticalAlignment="Center" 
                               Margin="0,0,8,0"
                               Foreground="{DynamicResource PrimaryForegroundBrush}" />
                    <TextBox Width="250" 
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             VerticalContentAlignment="Center" />
                </StackPanel>

                <!-- Right: Theme Toggle + Admin Badge -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <!-- Admin Badge (visible when NOT admin) -->
                    <Border Background="#FFFFA726" 
                            CornerRadius="3" 
                            Padding="6,2" 
                            Margin="0,0,8,0"
                            Visibility="{Binding IsRunningAsAdmin, Converter={StaticResource InverseBoolToVisibilityConverter}}"
                            ToolTip="{Binding AdminWarningMessage}">
                        <TextBlock Text="⚠ Not Admin" 
                                   FontWeight="SemiBold" 
                                   FontSize="11"
                                   Foreground="#FF5D4037" />
                    </Border>
                    <Button Content="{Binding CurrentThemeName}" 
                            Command="{Binding ToggleThemeCommand}"
                            ToolTip="Cycle Theme: Light → Dark → System"
                            MinWidth="80" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- Warning Banners Area -->
        <StackPanel Grid.Row="1">
            <!-- Admin Warning Banner (shown when not elevated) -->
            <Border Background="#FFFFF3E0" 
                    BorderBrush="#FFFFA726" 
                    BorderThickness="0,0,0,1"
                    Padding="10,6"
                    Visibility="{Binding IsRunningAsAdmin, Converter={StaticResource InverseBoolToVisibilityConverter}}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="⚠" FontSize="14" Foreground="#FFE65100" VerticalAlignment="Center" Margin="0,0,8,0" />
                    <TextBlock Grid.Column="1" 
                               Text="{Binding AdminWarningMessage}" 
                               Foreground="#FF5D4037"
                               TextWrapping="Wrap"
                               VerticalAlignment="Center" />
                </Grid>
            </Border>

            <!-- Local Feature Query Warning Banner (shown when there are feature query issues) -->
            <Border Background="#FFFFF8E1" 
                    BorderBrush="#FFFFC107" 
                    BorderThickness="0,0,0,1"
                    Padding="10,6"
                    Visibility="{Binding LocalFeatureWarning, Converter={StaticResource StringToVisibilityConverter}}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="*" />
                    </Grid.ColumnDefinitions>
                    <TextBlock Grid.Column="0" Text="ℹ" FontSize="14" Foreground="#FFF9A825" VerticalAlignment="Center" Margin="0,0,8,0" />
                    <TextBlock Grid.Column="1" 
                               Text="{Binding LocalFeatureWarning}" 
                               Foreground="#FF6D4C00"
                               TextWrapping="Wrap"
                               VerticalAlignment="Center" />
                </Grid>
            </Border>
        </StackPanel>

        <!-- Main Content Area -->
        <Grid Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <!-- Feature List -->
                <ColumnDefinition Width="*" />
                <!-- Details Panel -->
                <ColumnDefinition Width="280" />
            </Grid.ColumnDefinitions>

            <!-- Feature DataGrid -->
            <DataGrid Grid.Column="0"
                      ItemsSource="{Binding FeaturesView}"
                      SelectedItem="{Binding SelectedFeature}"
                      Margin="0,0,10,0"
                      IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" 
                                        Binding="{Binding Id}" 
                                        Width="100" />
                    <DataGridTextColumn Header="Name" 
                                        Binding="{Binding Name}" 
                                        Width="*" />
                    <DataGridTextColumn Header="State" 
                                        Binding="{Binding State}" 
                                        Width="100" />
                    <DataGridCheckBoxColumn Header="Enabled" 
                                            Binding="{Binding IsEnabled}" 
                                            Width="70" />
                </DataGrid.Columns>
            </DataGrid>

            <!-- Details/Actions Panel -->
            <Border Grid.Column="1" 
                    Background="{DynamicResource SecondaryBackgroundBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="15">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Accent Color Sample Section using System AccentColor brushes -->
                        <Border Background="{DynamicResource {x:Static SystemColors.AccentColorBrushKey}}"
                                CornerRadius="4"
                                Padding="10"
                                Margin="0,0,0,15">
                            <TextBlock Text="System Accent Color"
                                       FontWeight="SemiBold"
                                       Foreground="White"
                                       HorizontalAlignment="Center" />
                        </Border>

                        <TextBlock Text="Feature Details" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource {x:Static SystemColors.AccentColorBrushKey}}"
                                   Margin="0,0,0,15" />

                        <!-- Feature ID -->
                        <TextBlock Text="Feature ID:" 
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource SecondaryForegroundBrush}"
                                   Margin="0,0,0,4" />
                        <TextBlock Text="{Binding SelectedFeature.Id, FallbackValue='Select a feature'}"
                                   Foreground="{DynamicResource PrimaryForegroundBrush}"
                                   Margin="0,0,0,12" />

                        <!-- Feature Name -->
                        <TextBlock Text="Name:" 
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource SecondaryForegroundBrush}"
                                   Margin="0,0,0,4" />
                        <TextBlock Text="{Binding SelectedFeature.Name, FallbackValue='-'}"
                                   Foreground="{DynamicResource PrimaryForegroundBrush}"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,12" />

                        <!-- State -->
                        <TextBlock Text="Current State:" 
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource SecondaryForegroundBrush}"
                                   Margin="0,0,0,4" />
                        <TextBlock Text="{Binding SelectedFeature.State, FallbackValue='-'}"
                                   Foreground="{DynamicResource PrimaryForegroundBrush}"
                                   Margin="0,0,0,12" />

                        <!-- Notes -->
                        <TextBlock Text="Notes:" 
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource SecondaryForegroundBrush}"
                                   Margin="0,0,0,4" />
                        <TextBlock Text="{Binding SelectedFeature.Notes, FallbackValue='-'}"
                                   Foreground="{DynamicResource PrimaryForegroundBrush}"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,20" />

                        <!-- Action Buttons -->
                        <TextBlock Text="Actions" 
                                   FontSize="14" 
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource PrimaryForegroundBrush}"
                                   Margin="0,0,0,10" />

                        <Button Content="Enable Feature"
                                Command="{Binding ApplyFeatureCommand}"
                                Margin="0,0,0,8"
                                HorizontalAlignment="Stretch" />

                        <Button Content="Revert to Default"
                                Command="{Binding RevertFeatureCommand}"
                                Margin="0,0,0,8"
                                HorizontalAlignment="Stretch" />

                        <!-- Feature Scanner Section -->
                        <Separator Margin="0,10,0,10" />

                        <TextBlock Text="Feature Scanner" 
                                   FontSize="14" 
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource PrimaryForegroundBrush}"
                                   Margin="0,0,0,10" />

                        <Button Content="Open Feature Scanner"
                                Command="{Binding LaunchFeatureScannerCommand}"
                                Margin="0,0,0,8"
                                HorizontalAlignment="Stretch"
                                ToolTip="Open the integrated Feature Scanner to scan for hidden Windows features" />

                        <!-- Publish Feature List Panel -->
                        <Border Visibility="{Binding CanShowPublishPanel, Converter={StaticResource BoolToVisibilityConverter}}"
                                Background="{DynamicResource TertiaryBackgroundBrush}"
                                BorderBrush="{DynamicResource BorderBrush}"
                                BorderThickness="1"
                                CornerRadius="4"
                                Padding="10"
                                Margin="0,8,0,0">
                            <StackPanel>
                                <TextBlock Text="Publish Feature List" 
                                           FontSize="13" 
                                           FontWeight="SemiBold"
                                           Foreground="{DynamicResource PrimaryForegroundBrush}"
                                           Margin="0,0,0,10" />

                                <!-- Build Number -->
                                <TextBlock Text="Build Number:" 
                                           Foreground="{DynamicResource SecondaryForegroundBrush}"
                                           Margin="0,0,0,4" />
                                <TextBox Text="{Binding PublishBuildNumber, UpdateSourceTrigger=PropertyChanged}"
                                         Margin="0,0,0,8" />

                                <!-- Format Selection -->
                                <TextBlock Text="Format:" 
                                           Foreground="{DynamicResource SecondaryForegroundBrush}"
                                           Margin="0,0,0,4" />
                                <ComboBox ItemsSource="{Binding AvailableFormats}"
                                          SelectedItem="{Binding PublishFormat}"
                                          Margin="0,0,0,8" />

                                <!-- Artifact Path -->
                                <TextBlock Text="Artifact Path:" 
                                           Foreground="{DynamicResource SecondaryForegroundBrush}"
                                           Margin="0,0,0,4" />
                                <TextBox Text="{Binding PublishArtifactPath, UpdateSourceTrigger=PropertyChanged}"
                                         Margin="0,0,0,8"
                                         ToolTip="Path to the generated feature list file from Feature Scanner" />

                                <!-- Artifact URL (alternative) -->
                                <TextBlock Text="Or Artifact URL:" 
                                           Foreground="{DynamicResource SecondaryForegroundBrush}"
                                           Margin="0,0,0,4" />
                                <TextBox Text="{Binding PublishArtifactUrl, UpdateSourceTrigger=PropertyChanged}"
                                         Margin="0,0,0,8"
                                         ToolTip="URL to download the artifact from (alternative to local path)" />

                                <!-- GitHub Token -->
                                <TextBlock Text="GitHub Token:" 
                                           Foreground="{DynamicResource SecondaryForegroundBrush}"
                                           Margin="0,0,0,4" />
                                <PasswordBox x:Name="GitHubTokenBox"
                                             Margin="0,0,0,8"
                                             PasswordChanged="GitHubTokenBox_PasswordChanged"
                                             ToolTip="Personal Access Token with workflow permissions" />

                                <!-- Publish Button -->
                                <Button Content="{Binding PublishStatus, Converter={StaticResource PublishStatusToButtonTextConverter}, FallbackValue='Publish via GitHub Actions'}"
                                        Command="{Binding PublishFeatureListCommand}"
                                        Margin="0,0,0,4"
                                        HorizontalAlignment="Stretch"
                                        IsEnabled="{Binding IsPublishing, Converter={StaticResource InverseBoolConverter}}" />

                                <!-- Status Messages -->
                                <TextBlock Text="{Binding PublishErrorMessage}"
                                           Foreground="Red"
                                           TextWrapping="Wrap"
                                           Visibility="{Binding PublishErrorMessage, Converter={StaticResource StringToVisibilityConverter}}"
                                           Margin="0,4,0,0" />

                                <!-- Maintainer-Only Warning -->
                                <Border Visibility="{Binding IsMaintainerOnlyError, Converter={StaticResource BoolToVisibilityConverter}}"
                                        Background="#FFFFCDD2"
                                        CornerRadius="4"
                                        Padding="8"
                                        Margin="0,4,0,0">
                                    <TextBlock Text="Publishing feature lists is restricted to repository maintainers. Please contact a maintainer to publish your feature list."
                                               Foreground="#FFB71C1C"
                                               TextWrapping="Wrap" />
                                </Border>

                                <!-- Success Message -->
                                <Border Visibility="{Binding PublishStatus, Converter={StaticResource PublishSuccessToVisibilityConverter}}"
                                        Background="#FFC8E6C9"
                                        CornerRadius="4"
                                        Padding="8"
                                        Margin="0,4,0,0">
                                    <TextBlock Text="Workflow dispatched successfully! Check GitHub Actions for progress."
                                               Foreground="#FF2E7D32"
                                               TextWrapping="Wrap" />
                                </Border>
                            </StackPanel>
                        </Border>
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Status Bar - Using System Accent Color for modern look -->
        <Border Grid.Row="3" 
                Background="{DynamicResource {x:Static SystemColors.AccentColorBrushKey}}"
                Padding="10,6">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="{Binding StatusMessage}"
                           Foreground="White"
                           VerticalAlignment="Center" />

                <!-- Loading Indicator -->
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="Loading..." 
                               Foreground="White"
                               Margin="0,0,8,0"
                               VerticalAlignment="Center" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
