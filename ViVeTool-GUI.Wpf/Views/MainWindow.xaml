<Window x:Class="Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:ViVeTool_GUI.Wpf.ViewModels"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=vm:MainViewModel, IsDesignTimeCreatable=False}"
        Title="ViVeTool GUI (WPF)" 
        Height="600" Width="900"
        MinHeight="400" MinWidth="600"
        WindowStartupLocation="CenterScreen"
        Style="{DynamicResource MainWindowStyle}"
        Background="{DynamicResource PrimaryBackgroundBrush}"
        Foreground="{DynamicResource PrimaryForegroundBrush}">

    <Grid>
        <Grid.RowDefinitions>
            <!-- Header/Toolbar -->
            <RowDefinition Height="Auto" />
            <!-- Main Content -->
            <RowDefinition Height="*" />
            <!-- Status Bar -->
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header/Toolbar Area -->
        <Border Grid.Row="0" 
                Background="{DynamicResource HeaderBackgroundBrush}" 
                Padding="10">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <!-- Left: Build Selection -->
                <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                    <TextBlock Text="Build:" 
                               VerticalAlignment="Center" 
                               Margin="0,0,8,0"
                               Foreground="{DynamicResource PrimaryForegroundBrush}" />
                    <ComboBox Width="120" 
                              ItemsSource="{Binding AvailableBuilds}"
                              SelectedItem="{Binding SelectedBuild}"
                              IsEnabled="{Binding IsLoading, Converter={StaticResource InverseBoolConverter}}" />
                    <Button Content="Refresh" 
                            Margin="8,0,0,0"
                            Command="{Binding RefreshBuildsCommand}" />
                </StackPanel>

                <!-- Center: Search -->
                <StackPanel Grid.Column="1" Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Center">
                    <TextBlock Text="Search:" 
                               VerticalAlignment="Center" 
                               Margin="0,0,8,0"
                               Foreground="{DynamicResource PrimaryForegroundBrush}" />
                    <TextBox Width="250" 
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"
                             VerticalContentAlignment="Center" />
                </StackPanel>

                <!-- Right: Theme Toggle -->
                <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center">
                    <Button Content="{Binding CurrentThemeName}" 
                            Command="{Binding ToggleThemeCommand}"
                            ToolTip="Cycle Theme: Light → Dark → System"
                            MinWidth="80" />
                </StackPanel>
            </Grid>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <!-- Feature List -->
                <ColumnDefinition Width="*" />
                <!-- Details Panel -->
                <ColumnDefinition Width="280" />
            </Grid.ColumnDefinitions>

            <!-- Feature DataGrid -->
            <DataGrid Grid.Column="0"
                      ItemsSource="{Binding FeaturesView}"
                      SelectedItem="{Binding SelectedFeature}"
                      Margin="0,0,10,0"
                      IsReadOnly="True">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" 
                                        Binding="{Binding Id}" 
                                        Width="100" />
                    <DataGridTextColumn Header="Name" 
                                        Binding="{Binding Name}" 
                                        Width="*" />
                    <DataGridTextColumn Header="State" 
                                        Binding="{Binding State}" 
                                        Width="100" />
                    <DataGridCheckBoxColumn Header="Enabled" 
                                            Binding="{Binding IsEnabled}" 
                                            Width="70" />
                </DataGrid.Columns>
            </DataGrid>

            <!-- Details/Actions Panel -->
            <Border Grid.Column="1" 
                    Background="{DynamicResource SecondaryBackgroundBrush}"
                    BorderBrush="{DynamicResource BorderBrush}"
                    BorderThickness="1"
                    CornerRadius="4"
                    Padding="15">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Accent Color Sample Section using System AccentColor brushes -->
                        <Border Background="{DynamicResource {x:Static SystemColors.AccentColorBrushKey}}"
                                CornerRadius="4"
                                Padding="10"
                                Margin="0,0,0,15">
                            <TextBlock Text="System Accent Color"
                                       FontWeight="SemiBold"
                                       Foreground="White"
                                       HorizontalAlignment="Center" />
                        </Border>

                        <TextBlock Text="Feature Details" 
                                   FontSize="16" 
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource {x:Static SystemColors.AccentColorBrushKey}}"
                                   Margin="0,0,0,15" />

                        <!-- Feature ID -->
                        <TextBlock Text="Feature ID:" 
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource SecondaryForegroundBrush}"
                                   Margin="0,0,0,4" />
                        <TextBlock Text="{Binding SelectedFeature.Id, FallbackValue='Select a feature'}"
                                   Foreground="{DynamicResource PrimaryForegroundBrush}"
                                   Margin="0,0,0,12" />

                        <!-- Feature Name -->
                        <TextBlock Text="Name:" 
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource SecondaryForegroundBrush}"
                                   Margin="0,0,0,4" />
                        <TextBlock Text="{Binding SelectedFeature.Name, FallbackValue='-'}"
                                   Foreground="{DynamicResource PrimaryForegroundBrush}"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,12" />

                        <!-- State -->
                        <TextBlock Text="Current State:" 
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource SecondaryForegroundBrush}"
                                   Margin="0,0,0,4" />
                        <TextBlock Text="{Binding SelectedFeature.State, FallbackValue='-'}"
                                   Foreground="{DynamicResource PrimaryForegroundBrush}"
                                   Margin="0,0,0,12" />

                        <!-- Notes -->
                        <TextBlock Text="Notes:" 
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource SecondaryForegroundBrush}"
                                   Margin="0,0,0,4" />
                        <TextBlock Text="{Binding SelectedFeature.Notes, FallbackValue='-'}"
                                   Foreground="{DynamicResource PrimaryForegroundBrush}"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,20" />

                        <!-- Action Buttons -->
                        <TextBlock Text="Actions" 
                                   FontSize="14" 
                                   FontWeight="SemiBold"
                                   Foreground="{DynamicResource PrimaryForegroundBrush}"
                                   Margin="0,0,0,10" />

                        <Button Content="Enable Feature"
                                Command="{Binding ApplyFeatureCommand}"
                                Margin="0,0,0,8"
                                HorizontalAlignment="Stretch" />

                        <Button Content="Revert to Default"
                                Command="{Binding RevertFeatureCommand}"
                                Margin="0,0,0,8"
                                HorizontalAlignment="Stretch" />

                        <!-- TODO: Add more actions like Disable, Manual Set, etc. -->
                    </StackPanel>
                </ScrollViewer>
            </Border>
        </Grid>

        <!-- Status Bar - Using System Accent Color for modern look -->
        <Border Grid.Row="2" 
                Background="{DynamicResource {x:Static SystemColors.AccentColorBrushKey}}"
                Padding="10,6">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           Text="{Binding StatusMessage}"
                           Foreground="White"
                           VerticalAlignment="Center" />

                <!-- Loading Indicator -->
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal" 
                            Visibility="{Binding IsLoading, Converter={StaticResource BoolToVisibilityConverter}}">
                    <TextBlock Text="Loading..." 
                               Foreground="White"
                               Margin="0,0,8,0"
                               VerticalAlignment="Center" />
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
