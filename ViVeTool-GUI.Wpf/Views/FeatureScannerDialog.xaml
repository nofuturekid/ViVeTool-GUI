<Window x:Class="Views.FeatureScannerDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:vm="clr-namespace:ViVeTool_GUI.Wpf.ViewModels"
        mc:Ignorable="d"
        d:DataContext="{d:DesignInstance Type=vm:FeatureScannerViewModel, IsDesignTimeCreatable=False}"
        Title="Feature Scanner" 
        Height="600" Width="700"
        MinHeight="500" MinWidth="550"
        WindowStartupLocation="CenterOwner"
        Style="{DynamicResource MainWindowStyle}"
        Background="{DynamicResource PrimaryBackgroundBrush}"
        Foreground="{DynamicResource PrimaryForegroundBrush}">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <!-- Header -->
            <RowDefinition Height="Auto" />
            <!-- Setup Inputs -->
            <RowDefinition Height="Auto" />
            <!-- Progress Section -->
            <RowDefinition Height="Auto" />
            <!-- Output Log -->
            <RowDefinition Height="*" />
            <!-- Result Section -->
            <RowDefinition Height="Auto" />
            <!-- Buttons -->
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Margin="0,0,0,20">
            <TextBlock Text="Feature Scanner" 
                       FontSize="24" 
                       FontWeight="SemiBold"
                       Foreground="{DynamicResource {x:Static SystemColors.AccentColorBrushKey}}" />
            <TextBlock Text="Scan Windows debug symbols to discover hidden feature flags" 
                       FontSize="13"
                       Foreground="{DynamicResource SecondaryForegroundBrush}"
                       Margin="0,4,0,0" />
            <TextBlock FontSize="12"
                       Foreground="{DynamicResource SecondaryForegroundBrush}"
                       Margin="0,8,0,0"
                       TextWrapping="Wrap">
                <Run Text="Prerequisites: " FontWeight="SemiBold" />
                <Run Text="Windows SDK with Debugging Tools installed. Download from " />
                <Hyperlink NavigateUri="https://go.microsoft.com/fwlink/?linkid=2342616" 
                           RequestNavigate="Hyperlink_RequestNavigate">
                    Microsoft Developer
                </Hyperlink>
            </TextBlock>
        </StackPanel>

        <!-- Setup Inputs -->
        <Grid Grid.Row="1" Margin="0,0,0,20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="120" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Symbol Path -->
            <StackPanel Grid.Row="0" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="Symbol Path:" 
                           Foreground="{DynamicResource PrimaryForegroundBrush}" />
                <TextBlock Text="&#xE946;" 
                           FontFamily="Segoe MDL2 Assets" 
                           FontSize="12"
                           Foreground="{DynamicResource SecondaryForegroundBrush}"
                           Margin="6,0,0,0"
                           VerticalAlignment="Center"
                           ToolTip="Folder where downloaded PDB files are stored (needs ~5â€“8 GB free space)."
                           Cursor="Help" />
            </StackPanel>
            <TextBox Grid.Row="0" Grid.Column="1" 
                     Text="{Binding SymbolPath, UpdateSourceTrigger=PropertyChanged}"
                     IsEnabled="{Binding IsScanning, Converter={StaticResource InverseBoolConverter}}"
                     ToolTip="Folder to store downloaded debug symbols (5-8GB space required)"
                     Margin="0,0,8,0" />
            <Button Grid.Row="0" Grid.Column="2" 
                    Content="Browse..."
                    Command="{Binding BrowseSymbolPathCommand}"
                    Width="80" />

            <!-- Debugger Path -->
            <StackPanel Grid.Row="1" Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="0,10,0,0">
                <TextBlock Text="Debugger Path:" 
                           Foreground="{DynamicResource PrimaryForegroundBrush}" />
                <TextBlock Text="&#xE946;" 
                           FontFamily="Segoe MDL2 Assets" 
                           FontSize="12"
                           Foreground="{DynamicResource SecondaryForegroundBrush}"
                           Margin="6,0,0,0"
                           VerticalAlignment="Center"
                           ToolTip="Path to symchk.exe from Windows Debugging Tools (used to download symbols)."
                           Cursor="Help" />
            </StackPanel>
            <TextBox Grid.Row="1" Grid.Column="1" 
                     Text="{Binding DebuggerPath, UpdateSourceTrigger=PropertyChanged}"
                     IsEnabled="{Binding IsScanning, Converter={StaticResource InverseBoolConverter}}"
                     ToolTip="Path to symchk.exe from Windows Debugging Tools (e.g., C:\Program Files\Windows Kits\10\Debuggers\x64\symchk.exe)"
                     Margin="0,10,8,0" />
            <Button Grid.Row="1" Grid.Column="2" 
                    Content="Browse..."
                    Command="{Binding BrowseDebuggerPathCommand}"
                    Width="80"
                    Margin="0,10,0,0" />

            <!-- Build Number -->
            <TextBlock Grid.Row="2" Grid.Column="0" 
                       Text="Build Number:" 
                       VerticalAlignment="Center"
                       Foreground="{DynamicResource PrimaryForegroundBrush}"
                       Margin="0,10,0,0" />
            <TextBox Grid.Row="2" Grid.Column="1" 
                     Text="{Binding BuildNumber, UpdateSourceTrigger=PropertyChanged}"
                     IsEnabled="{Binding IsScanning, Converter={StaticResource InverseBoolConverter}}"
                     ToolTip="Windows build number (auto-detected from system)"
                     Margin="0,10,8,0" />
            <TextBlock Grid.Row="2" Grid.Column="2" 
                       Text="(auto-detected)"
                       VerticalAlignment="Center"
                       Foreground="{DynamicResource SecondaryForegroundBrush}"
                       FontSize="11"
                       Margin="0,10,0,0" />
        </Grid>

        <!-- Progress Section -->
        <Grid Grid.Row="2" Margin="0,0,0,15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto" />
                <RowDefinition Height="Auto" />
            </Grid.RowDefinitions>

            <ProgressBar Grid.Row="0" 
                         Height="20"
                         Minimum="0" 
                         Maximum="100" 
                         Value="{Binding ProgressPercentage}"
                         Foreground="{DynamicResource {x:Static SystemColors.AccentColorBrushKey}}" />

            <TextBlock Grid.Row="1" 
                       Text="{Binding StatusMessage}"
                       Foreground="{DynamicResource SecondaryForegroundBrush}"
                       Margin="0,6,0,0" />
        </Grid>

        <!-- Output Log -->
        <Border Grid.Row="3" 
                Background="{DynamicResource SecondaryBackgroundBrush}"
                BorderBrush="{DynamicResource BorderBrush}"
                BorderThickness="1"
                CornerRadius="4"
                Margin="0,0,0,15">
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto" />
                    <RowDefinition Height="*" />
                </Grid.RowDefinitions>

                <TextBlock Grid.Row="0" 
                           Text="Output Log"
                           FontWeight="SemiBold"
                           Foreground="{DynamicResource PrimaryForegroundBrush}"
                           Padding="10,8" />

                <ScrollViewer Grid.Row="1" 
                              VerticalScrollBarVisibility="Auto"
                              HorizontalScrollBarVisibility="Auto">
                    <TextBox Text="{Binding OutputLog, Mode=OneWay}"
                             IsReadOnly="True"
                             TextWrapping="Wrap"
                             FontFamily="Consolas"
                             FontSize="11"
                             Background="Transparent"
                             BorderThickness="0"
                             Padding="10,0,10,10"
                             VerticalScrollBarVisibility="Disabled" />
                </ScrollViewer>
            </Grid>
        </Border>

        <!-- Result Section (shown when completed) -->
        <Border Grid.Row="4" 
                Visibility="{Binding IsCompleted, Converter={StaticResource BoolToVisibilityConverter}}"
                Background="#FFC8E6C9"
                BorderBrush="#FF4CAF50"
                BorderThickness="1"
                CornerRadius="4"
                Padding="12"
                Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="Scan Completed Successfully!"
                           FontWeight="SemiBold"
                           Foreground="#FF2E7D32" />
                <TextBlock Margin="0,6,0,0"
                           Foreground="#FF2E7D32"
                           TextWrapping="Wrap">
                    <Run Text="Output file: " />
                    <Run Text="{Binding OutputFilePath}" FontWeight="SemiBold" />
                </TextBlock>
            </StackPanel>
        </Border>

        <!-- Error Section (shown when failed) -->
        <Border Grid.Row="4" 
                Visibility="{Binding HasError, Converter={StaticResource BoolToVisibilityConverter}}"
                Background="#FFFFCDD2"
                BorderBrush="#FFF44336"
                BorderThickness="1"
                CornerRadius="4"
                Padding="12"
                Margin="0,0,0,15">
            <StackPanel>
                <TextBlock Text="Scan Failed"
                           FontWeight="SemiBold"
                           Foreground="#FFB71C1C" />
                <TextBlock Text="{Binding ErrorMessage}"
                           Foreground="#FFB71C1C"
                           TextWrapping="Wrap"
                           Margin="0,6,0,0" />
            </StackPanel>
        </Border>

        <!-- Buttons -->
        <Grid Grid.Row="5">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <!-- Left side: Use Result button (visible when completed) -->
            <Button Grid.Column="0" 
                    Content="Use Result &amp; Publish"
                    Command="{Binding UseResultCommand}"
                    Visibility="{Binding IsCompleted, Converter={StaticResource BoolToVisibilityConverter}}"
                    HorizontalAlignment="Left"
                    MinWidth="140"
                    ToolTip="Close dialog and populate the Publish panel with the scan result" />

            <!-- Right side buttons -->
            <Button Grid.Column="1" 
                    Content="Run Scan"
                    Command="{Binding RunScanCommand}"
                    MinWidth="100"
                    Margin="0,0,10,0" />

            <Button Grid.Column="2" 
                    Content="Stop"
                    Command="{Binding StopScanCommand}"
                    MinWidth="80"
                    Margin="0,0,10,0" />

            <Button Grid.Column="3" 
                    Content="Close"
                    Command="{Binding CloseCommand}"
                    MinWidth="80"
                    IsCancel="True" />
        </Grid>
    </Grid>
</Window>
